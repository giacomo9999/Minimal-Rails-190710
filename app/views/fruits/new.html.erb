<h1>Create A Fruit</h1>
<%= form_with model: @fruit, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :color %><br>
    <%= form.text_area :color %>
  </p>

  <p>
    <%= form.label :shape %><br>
    <%= form.text_area :shape %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>
